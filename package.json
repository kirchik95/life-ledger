    "vite": "^5.3.1",
    "vite-plugin-checker": "^0.7.1",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,scss, md}": [
      "prettier --write"
